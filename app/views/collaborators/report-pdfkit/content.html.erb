<style>
  * {
    font-size: 12pt;
  }
  main {
    box-sizing: border-box;
    background-color: #ccc;
  }
  h1 {
    font-size: 25pt;
    padding-top: 1cm;
    margin-bottom: 0px;
  }
  h3 {
    font-weight: normal;
  }
  table {
    width: 100%;
    text-align: left;
    border-top: 0.5px solid black;
    border-left: 1px solid black;
    border-right: 1px solid black;
    border-bottom: 0.5px solid black;
    padding-left: 5px;
    page-break-inside: avoid;
  }
  table th {
    font-size: 14pt;
  }
  table td {
    width: 33%;
    font-size: 12pt;
  }
  table td span {
    font-size: 12pt;
    font-weight: bold;
  }
  .left {
    float: left;
  }
  .right {
    float: right;
  }
</style>
<section>
  <h1>FILA AMBULATORIAL</h1>
  <h3>Filtros: Sexo: Masculino; Idade de: 10; Idade at: 20</h3>
  <% @collaborators.each.with_index do |collaborator, index| %>
    <table>
      <tr>
        <th colspan="3"><%= collaborator.name %></th>
      </tr>
      <tr>
        <td><span>Cartão:</span> <%= collaborator.created_at %></td>
        <td><span>Espera:</span> <%= collaborator.created_at %></td>
        <td><span>CID:</span> <%= collaborator.created_at %></td>
      </tr>
      <tr>
        <td><span>Idade:</span> <%= collaborator.created_at %></td>
        <td><span>Especialidade:</span> <%= collaborator.created_at %></td>
        <td rowspan="2"><span>Descrição Clínica:</span> <%= collaborator.created_at %></td>
      </tr>
      <tr>
        <td><span>Sexo:</span> <%= collaborator.created_at %></td>
        <td colspan="2"><span>Prioridade:</span> <%= collaborator.created_at %></td>
      </tr>
      <tr>
        <td><span>Origem:</span> <%= collaborator.created_at %></td>
        <td colspan="2"><span>Caráter:</span> <%= collaborator.created_at %></td>
      </tr>
      <tr>
        <td><span>Status:</span> <%= collaborator.created_at %></td>
        <td colspan="2"><span>Solicitante:</span> <%= collaborator.created_at %></td>
      </tr>
      <tr>
        <td><span>Desde:</span> <%= collaborator.created_at %></td>
        <td colspan="2"><span>Operador:</span> <%= collaborator.created_at %></td>
      </tr>
      <tr>
        <td colspan="3"><span>Enviado RMT:</span> <%= collaborator.created_at %></td>
      </tr>
    </table>
  <% end %>
</section>

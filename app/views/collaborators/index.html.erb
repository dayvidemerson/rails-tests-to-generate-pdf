<p id="notice"><%= notice %></p>

<h1>Listing Collaborators</h1>

<div class="jumbotron">
  <%= link_to 'Export With PDFKit', export_with_pdfkit_collaborators_path, target: "_blank", class:"btn btn-info" %>
  <%= link_to 'Export With Wicked', export_with_wicked_collaborators_path, target: "_blank", class:"btn btn-info" %>
  <%= link_to 'Export With Prawn', export_with_prawn_collaborators_path, target: "_blank", class:"btn btn-info" %>
  <%= link_to 'Export With Libreconv', export_with_libreconv_collaborators_path, target: "_blank", class:"btn btn-info" %>
  <%= link_to 'Export With Docsplit', export_with_docsplit_collaborators_path, target: "_blank", class:"btn btn-info" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Salary</th>
      <th>Admission date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collaborators.each do |collaborator| %>
      <tr>
        <td><%= collaborator.name %></td>
        <td><%= collaborator.salary %></td>
        <td><%= collaborator.admission_date %></td>
        <td><%= link_to 'Show', collaborator %></td>
        <td><%= link_to 'Edit', edit_collaborator_path(collaborator) %></td>
        <td><%= link_to 'Destroy', collaborator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Collaborator', new_collaborator_path %>
